dibayes : {
  call-stringency : "low_frequency",
  het-skip-high-coverage : 0,
  reads-min-mapping-qv : 8,
  het-min-lca-start-pos : 2,
  het-min-lca-base-qv : 27,
  het-lca-both-strands : 1,
  het-min-allele-ratio : 0.04,
  het-max-coverage-bayesian : 60,
  het-min-nonref-base-qv : 27,
  snps-min-base-qv : 21,
  snps-min-nonref-base-qv : 21,
  reads-with-indel-exclude : 0,
  het-min-coverage : 5,
  het-min-start-pos : 2,
  hom-min-coverage : 3,
  hom-min-nonref-allele-count : 3,
  snps-min-filteredreads-rawreads-ratio : 0.15,
  het-min-validreads-totalreads-ratio : 0.65,
  reads-min-alignlength-readlength-ratio : 0.2,
  hom-min-nonref-base-qv : 27,
  hom-min-nonref-start-pos : 2,
  snps-both-strands : 1,
  hp-penalty1 : 4.0,
  hp-pen-slope : 0.5,
  hp-jump-pos : 6,
  hp-jump-amount : 15,
  relative-variant-strand-bias : 0.95,
  mini-strandcount-fpr-strand-bias : 10        
}


torrent-variant-caller : {
  # maximum coverage depth, samples if exceeded (default 500)
  downsample_to_coverage : 500,

  # Genotype likelihoods calculation model to employ (default SNP) -- SNP, INDEL, BOTH
  genotype_likelihoods_model : INDEL,
  
  # Number of threads to use (default 1)
  num_threads :  8,
  
  # Minimum number of consensus indels required to trigger genotyping run (default 5)
  min_indel_count_for_genotyping : 5,
  
  # Heterozygosity value used to compute prior likelihoods for any locus (default 1E-3)
  # heterozygosity : 0.001,
  
  # Heterozygosity for indel calling. This argument informs the prior probability 
  # of having an indel at a site. (default 1.25E-4)
  # indel_heterozygosity : 1.25E-4, 
  
  # Maximum number of alternate alleles to genotype (default 3)
  max_alternate_alleles : 2,
  
  # Maximum fraction of reads with deletions spanning this locus for it to be 
  # callable [to disable, set to < 0 or > 1; default:0.05]
  max_deletion_fraction : 2,
  
  # Minimum base quality required to consider a base for calling (default 17)
  #min_base_quality_score : 17,
  
  # The minimum phred-scaled confidence threshold at which variants not at 
  # 'trigger' track sites should be called (default 30.0)
  # standard_min_confidence_threshold_for_calling : 30.0,
  
  # The minimum phred-scaled confidence threshold at which variants not at 'trigger' track 
  # sites should be emitted (and filtered if less than the calling threshold) (default 30.0)
  # standard_min_confidence_threshold_for_emitting : 30.0,
  
  # The PCR error rate to be used for computing fragment-based likelihoods (default 1.0E-4)
  # pcr_error_rate : 1.0E-4,
  
  # Indel gap continuation penalty (default 10.0)
  # indelGapContinuationPenalty : 10.0,
  
  # Indel gap open penalty (default 45.0)
  # indelGapOpenPenalty : 45.0, 
  
  # Indel haplotype size (default 80)
  # indelHaplotypeSize : 80, 
    
  # Additional annotations for variant in vcf (default [IndelType,AlleleBalance,BaseCounts,ReadDepthAndAllelicFractionBySample,AlleleBalanceBySample,DepthPerAlleleBySample,MappingQualityZeroBySample])
  # annotation : IndelType,
  # annotation : AlleleBalance,
  # annotation : BaseCounts,
  # annotation : ReadDepthAndAllelicFractionBySample,
  # annotation : AlleleBalanceBySample,
  # annotation : DepthPerAlleleBySample,
  # annotation : MappingQualityZeroBySample
}



